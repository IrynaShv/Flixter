<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HiddenTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="LargeTitleFont" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/font_size_extra_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleFont">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OverviewFont">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="DateFont" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="DetailsOverviewFont">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="betterRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstar</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
